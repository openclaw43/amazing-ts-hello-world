{
  "name": "amazing-ts-hello-world",
  "version": "1.0.0",
  "description": "ðŸš€ The most amazing TypeScript Hello World app you'll ever see",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "hello-world": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run build:cli",
    "build:cli": "chmod +x dist/cli.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "cli": "node dist/cli.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "echo 'Linting skipped - no ESLint config'",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "typescript",
    "hello-world",
    "starter",
    "cli",
    "gradient",
    "chalk",
    "amazing"
  ],
  "author": "OpenClaw AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openclaw43/amazing-ts-hello-world.git"
  },
  "bugs": {
    "url": "https://github.com/openclaw43/amazing-ts-hello-world/issues"
  },
  "homepage": "https://github.com/openclaw43/amazing-ts-hello-world#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/gradient-string": "^1.1.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "gradient-string": "^2.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}